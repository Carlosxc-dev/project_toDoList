generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model user {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  email   String   @unique
  name    String
  tasks   task[]
}
model task {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  created_at  DateTime @db.Date
  status      String
  title       String
  author      user      @relation(fields: [userId], references: [id])
  userId      String    @db.ObjectId


}


